[flake8]
max-line-length = 100
extend-ignore = E203, W503

# Do not check virtual environments, cache, etc.
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Requirements for docstrings in tests if you use flake8-docstrings
per-file-ignores =
    tests/*: D100,D101,D102,D103,D104
